<div class="container container-table"  id="div_login_1" style="margin-top:150px">
    <div class="row vertical-center-row"  id="div_login_2" >
        <div class="text-center col-md-4 col-md-offset-4" id="div_login" >

<h3>Регистрирай се</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 <div class="form-group" style="padding-top:20px">
   <%= f.label :Потребител,id: 'email_sign_in_label' %>
   <%= f.text_field :name,id: 'email_sign_in',class: "form-control input-lg" , autofocus: true%> 
 </div>﻿

  <div class="form-group">
    <%= f.label :"E-mail",id: 'email_sign_in_label' %>
    <%= f.email_field :email,id: 'email_sign_in',class: "form-control input-lg" , autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :Парола,id: 'password_sign_in_label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символа минимум)</em>
    <% end %>
    <%= f.password_field :password, id: 'password_sign_in',class: "form-control input-lg" , autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :"Потвърди паролата",id: 'password_sign_in_label' %>
    <%= f.password_field :password_confirmation, id: 'password_sign_in',class: "form-control input-lg" , autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Регистрирай се",{ :class => 'btn btn-lg ',:id => 'login_but'} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
